# This ID must be unique across the cluster
jira.node.id = <%= scope.lookupvar("fqdn") %>
# The location of the shared home directory for all JIRA nodes
jira.shared.home = <%= scope.lookupvar("jira::shared_homedir") %>
<% if @ehcache_listener_host -%>
ehcache.listener.hostName = <%= @ehcache_listener_host %>
<% end -%>
<% if @ehcache_listener_port -%>
ehcache.listener.port = <%= @ehcache_listener_port %>
<% end -%>
<% if @ehcache_object_port -%>
ehcache.object.port = <%= @ehcache_object_port %>
<% end -%>
